<ProfitScreenView>
    md_bg_color: 'gray'
    heroes_to: profit_header, profit_footer

    MDHeroTo: 
        id: profit_header
        tag: 'hero_header'
        size_hint: 1, .15
        pos_hint: { 'right': 1.0,'top': 1.0 }
    
    MDBoxLayout:
        size_hint: 0.975, 0.85
        pos_hint: {'center_x': 0.5,'center_y': 0.425 }
        orientation: 'vertical'
        md_bg_color: 'red'
    
    MDHeroTo:
        id: profit_footer
        tag: 'hero_footer'
        orientation: 'vertical'
        size_hint: 1, 1
        pos_hint: {'center_x': 0.5,'center_y': 0.5}