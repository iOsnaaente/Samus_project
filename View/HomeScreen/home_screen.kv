<HomeScreenView>
    md_bg_color: 'gray'
    #
    # Header Content
    #
    MDHeroFrom: 
        id: hero_header 
        tag: 'hero_header'
        size_hint: 1, .15
        pos_hint: { 'right': 1.0,'top': 1.0 }
        #
        # Header Body 
        #
        MDFloatLayout:
            MDGridLayout:   
                md_bg_color: app.theme_cls.primary_color
                size_hint: 1, 1
                pos_hint: { 'right': 1.0,'top': 1.0 }
                cols: 3
                padding: 10
                #
                # Image 
                #
                MDCard:
                    id: card_image
                    size_hint: .25, 1
                    pos_hint: {'center_x': 0.1,'top': 1 }
                    radius: 75
                    md_bg_color: 'black'
                    elevation: 4
                    FitImage:
                        source: root.model.photo_image
                        radius: card_image.radius 
                #
                # Username 
                #
                MDBoxLayout:
                    size_hint: .4, 1
                    MDLabel:
                        id: username 
                        text: root.model.username 
                        color: 'white'
                        font_style: 'H3'
                        font_size: 32
                        bold: True 
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                        valign: 'center'
                        halign: 'center'
                #
                # Renda  
                #
                MDBoxLayout:
                    size_hint: .35, 1
                    orientation: 'vertical'
                    MDLabel:
                        size_hint: 1, .2
                    MDLabel:
                        size_hint: 1, .2
                        text: 'Renda total:'
                        color: 'white'
                        font_style: 'H3'
                        font_size: 20
                        valign: 'bottom'
                        halign: 'center'
                    MDLabel:
                        id: renda_total
                        size_hint: 1, .6
                        text: root.model.renda_total
                        color:'white'
                        bold: True 
                        font_style: 'H3'
                        font_size: 20
                        valign: 'top'
                        halign: 'center'
    #
    # Body Content
    #
    BoxLayout:
        size_hint: 0.975, 0.85
        pos_hint: {'center_x': 0.5,'center_y': 0.425 }
        orientation: 'vertical'
        
        MDBoxLayout:
            id: graph_box
            size_hint: 1, 0.3
            md_bg_color: 'white'

        ScrollView:
            size_hint: 1, 0.7
            MDBoxLayout:
                id: home_body_page
                orientation: 'vertical'
                md_bg_color:'pink'
                size_hint_y: None 
                spacing: "5dp"
    #
    # Footer Content
    #
    MDHeroFrom:
        id: hero_footer 
        tag: 'hero_footer'
        orientation: 'vertical'
        size_hint: 1, 1
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        #
        # Footer Body 
        #
        MDFloatLayout:
            #
            # Bottom Menu Bar 
            #
            MDBottomAppBar:
                MDTopAppBar:
                    id: add_profit_button
                    type: "bottom"
                    icon: 'plus'
                    on_action_button: root.controller.add_profit_button()
            #
            # Bottom Menu Buttons Design 
            #
            MDGridLayout:
                id: grid_bottom_menu
                size_hint: 1, .1
                pos_hint: {'rigth': 1.0, 'top': 0.1 }
                cols: 2
                MDBoxLayout:
                    size_hint: 0.5, 1
                    pos_hint: {'rigth': 0.5,'top': 1 } 
                    orientation: 'vertical'
                    MDLabel:
                        size_hint: 1, 0.25
                    MDIconButton: 
                        id: extrato_icon_button
                        icon: "alarm-panel-outline"
                        theme_icon_color: "Custom"
                        icon_color: "white"  
                        icon_size: '24sp' 
                        size_hint: .5, 0.4 
                        pos_hint: {'center_x': 0.35, 'center_y' : 0.5}
                    MDLabel:
                        id: extrato_text_button
                        text: "Extrato"
                        font_size: 14
                        theme_text_color: "Custom"
                        text_color: "white"              
                        halign: "center"
                        size_hint: .5, 0.2
                        pos_hint: {'center_x': 0.35, 'center_y' : 0.5}
                    MDLabel:
                        size_hint: 1, 0.15
                MDBoxLayout:
                    size_hint: 0.5, 1
                    pos_hint: {'right': 1.0,'top': 1}
                    orientation: 'vertical' 
                    MDLabel:
                        size_hint: 1, 0.25
                    MDIconButton: 
                        id: profit_icon_button
                        icon: "content-save-all-outline"
                        theme_icon_color: "Custom"
                        icon_color: "white"  
                        icon_size: '24sp'
                        size_hint: .5, 0.4 
                        pos_hint: {'center_x': 0.65, 'center_y' : 0.5}
                    MDLabel:
                        id: profit_text_button
                        text: "Previs√£o"
                        theme_text_color: "Custom"
                        text_color: "white"              
                        font_size: 14
                        halign: "center"
                        size_hint: .5, 0.2
                        pos_hint: {'center_x': 0.65, 'center_y' : 0.5}
                    MDLabel:
                        size_hint: 1, 0.15
            #
            # Left Button
            # 
            MDRectangleFlatIconButton:
                id: extrato_changer_button
                size_hint: 3/7, 0.08
                pos_hint: { 'center_x': 3/14, 'top' : 0.08 }
                theme_text_color: "Custom"
                theme_icon_color: "Custom"
                text_color:[0,0,0,0]
                line_color: [0,0,0,0]
                icon_color: [0,0,0,0]
                on_release: app.swipe_screen( None, True )

            #
            # Rigth Button
            #
            MDRectangleFlatIconButton:
                id: profit_changer_button
                size_hint: 3/7, 0.08
                pos_hint: {'center_x': 1-3/14, 'top' : 0.08}
                theme_text_color: "Custom"
                theme_icon_color: "Custom"
                text_color:[0,0,0,0]
                line_color: [0,0,0,0]
                icon_color: [0,0,0,0]
                on_release: app.swipe_screen( None, True )